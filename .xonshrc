xontrib load vox

# general shit
source "~/xsh/color_prompt.xsh"
if $HOSTNAME == "riley-laptop":
	identifier = "<3"
elif $HOSTNAME == "riley-server":
	identifier = "<>"
elif $HOSTNAME == "riley-desktop":
	identifier = "><"
else:
	identifier = "<?"

identifier = _color_prompt(identifier)
cwd_base = _color_prompt("{cwd_base}", bold=True)
prompt =  '{env_name: {}}' + identifier + ' ' + cwd_base + ' ) '
$PROMPT = prompt
$XONSH_COLOR_STYLE = 'default'

source "~/xsh/functions.xsh"
source "~/xsh/exceptions.xsh"
source "~/xsh/aliases.xsh"
# Windows Subsystem for Linux stuff
if in_wsl():
	$GPG_TTY=$(tty)  # allows gpg to work inside WSL

# path stuff
append_path("~/addins")
append_path("~/.local/bin")
append_path("~/bin")
append_path("~/go/bin")

# medication prompt
if $HOSTNAME == "riley-laptop":
	!(meds-prompt)

# man page colors :O
$LESS_TERMCAP_mb = "\033[01;31m"     # begin blinking
$LESS_TERMCAP_md = "\033[01;31m"     # begin bold
$LESS_TERMCAP_me = "\033[0m"         # end mode
$LESS_TERMCAP_so = "\033[01;44;36m"  # begin standout-mode (bottom of screen)
$LESS_TERMCAP_se = "\033[0m"         # end standout-mode

load_aliases()
