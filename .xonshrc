xontrib load vox

# prompt setup
ps1_vals = $(~/bin/ps1)
host_text, path_colors, separator_text, RESET = ps1_vals.split()
prompt =  f" {host_text}{RESET} {path_colors}{{cwd_base}}{RESET} {separator_text}{RESET} "
$PROMPT = prompt
$XONSH_COLOR_STYLE = 'default'

# general shit
source "~/xsh/functions.xsh"
source "~/xsh/exceptions.xsh"
source "~/xsh/aliases.xsh"

# Windows Subsystem for Linux stuff
if in_wsl():
	$GPG_TTY=$(tty)  # allows gpg to work inside WSL

# set editor
$EDITOR = "micro"

# micro vars
$MICRO_TRUECOLOR=1

# path stuff
append_path("~/addins")
append_path("~/.local/bin")
append_path("~/bin")
append_path("~/go/bin")

# man page colors :O
$LESS_TERMCAP_mb = "\033[01;31m"     # begin blinking
$LESS_TERMCAP_md = "\033[01;31m"     # begin bold
$LESS_TERMCAP_me = "\033[0m"         # end mode
$LESS_TERMCAP_so = "\033[01;44;36m"  # begin standout-mode (bottom of screen)
$LESS_TERMCAP_se = "\033[0m"         # end standout-mode

load_aliases()
